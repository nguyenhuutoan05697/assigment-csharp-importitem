@model IEnumerable<PRNAssigment.Models.Supplier>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
</head>
    <body> 
       
        <a style="text-decoration: none"
           href="/Supplier/Create">Add More Supplier 
        </a>
        <table class="table table-striped">
            <thead>

                <tr>
                    <th scope="col">SupplierID</th>
                    <th scope="col">Supplier Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th scope="row" style="color: red">@item.SupplierID</th>
                    <td>@item.SupplierName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SupplierID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.SupplierID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.SupplierID">Delete</a>
                    </td>
                </tr>}

            </tbody>
        </table>
    </body>
</html> 